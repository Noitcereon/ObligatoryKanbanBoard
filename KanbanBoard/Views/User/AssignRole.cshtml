@model KanbanBoardMVCApp.ViewModels.UserAssignRoleVM

@{
    ViewData["Title"] = "Role Assignment";
}
<h1>@ViewData["Title"]</h1>

<h2>Assigning roles to @Model.User.UserName</h2>
<form method="post" asp-action="AssignRole">
    <div class="form-group">
        <input asp-for="UserId" value="@Model.UserId" hidden/> 
        <label>Role to Assign</label>
        <select class="form-control" asp-items="@Model.Roles" asp-for="SelectedRole">
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Assign Role</button>
    </div>
</form>

