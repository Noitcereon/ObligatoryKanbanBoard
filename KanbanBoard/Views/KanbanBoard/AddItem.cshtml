@using System.Collections.Specialized
@model KanbanBoardMVCApp.Models.KanbanItem
@{
    ViewData["Title"] = "Kanban Board - Add Item";
}

<h1>@ViewData["Title"]</h1>

<form method="post" asp-action="AddItem" asp-route-item="@Model">
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" />
        <div asp-validation-for="Title"></div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ColumnId">Column</label>
        <select asp-for="@Model.ColumnId" class="form-control">
            <option value="1">To Do</option>
            <option value="2">Doing</option>
            <option value="3">Testing</option>
            <option value="4">Done</option>
        </select>
        <div asp-validation-for="ColumnId"></div>
    </div>
    <div asp-validation-summary="All"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}