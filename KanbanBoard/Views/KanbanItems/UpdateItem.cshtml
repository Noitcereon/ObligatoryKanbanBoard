@model KanbanBoardMVCApp.Models.KanbanItem

@{
    ViewBag.Title = "Kanban Board - Update Item";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="UpdateItem" asp-route-itemId="@Model.Id">
    <input asp-for="Id" type="hidden" />
    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" />
        <div asp-validation-for="Title" class="text-danger"></div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.KanbanColumn">Column</label>
        <select asp-for="@Model.KanbanColumnId" class="form-control">
            <option value="1">To Do</option>
            <option value="2">Doing</option>
            <option value="3">Testing</option>
            <option value="4">Done</option>
        </select>
        <div asp-validation-for="KanbanColumnId"></div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

<div>
    <a asp-action="Index">Back to kanban board</a>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}